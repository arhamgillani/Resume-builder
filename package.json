{
  "name": "resume-builder-app",
  "version": "1.0.0",
  "description": "A fully responsive Resume Builder Web Application using React.js and Node.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:all": "npm run install:frontend && npm run install:backend",
    "setup": "npm run install:all && npm run build",
    "test": "cd frontend && npm test",
    "clean": "rimraf frontend/build backend/exports/*.pdf backend/exports/*.docx node_modules/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}